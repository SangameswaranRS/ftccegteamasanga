<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reporting time"
        android:id="@+id/reportingtime"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="102dp" />
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrap1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="166dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mechProgress"
            android:hint="Percentage of efficiency of crew working in mechanism today"
            android:inputType="number"
            />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrap2"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/wrap1"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overallProgress"
            android:hint="Percentage of efficiency of crew working in software"
            android:inputType="number"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="     SUBMIT RESPONSE     "
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:height="25dp"
        android:id="@+id/adminResponse"
        android:textSize="15dp"
        android:background="@drawable/btn_back"
        android:layout_below="@+id/wrap2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />



</RelativeLayout>