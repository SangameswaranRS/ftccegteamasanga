<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Logged in as"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summa"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="164dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summa"
        android:layout_marginTop="45dp"
        android:id="@+id/displayname"
        android:textAlignment="center"
        android:textColor="@color/Ooo"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/messageradio">
        <RadioButton
            android:text="Write broadcast message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:id="@+id/writemessagebtn" />

        <RadioButton
            android:text="display message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/writemessagebtn"
            android:layout_alignEnd="@+id/writemessagebtn"
            android:layout_marginTop="20dp"
            android:id="@+id/displaymessagebtn"
            android:checked="true"/></RadioGroup>

    <TextView
        android:text="          Continue          "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:id="@+id/continuebtn"
        android:textColor="@color/white"

        android:textSize="30dp"
        android:height="40dp"
        android:background="@drawable/btn_back"/>

</RelativeLayout>